  style(scoped, type='less').
    :scope {
      position: fixed;
      display: block;
      background: #00a0bc;
      z-index: 100;
      width: 100%;
      height: 100%;
      top: 0;
      left: 0;
      .wrap-loading {
        width: 100%;
        height: 100%;
        #loadingCircle {
          width: 140px;
          height: 140px;
          border-radius: 50%;
          border: 4px solid #fff;
          border-right-color: transparent;
          border-left-color: transparent;
          animation: rotationAnim 1.0s ease-in infinite;
        }
        @keyframes rotationAnim {
          from {
            opacity: 0.0;
            transform: rotate(0deg);
          }
          50% {
            opacity: 1.0;
            transform: rotate(180deg);
          }
          to {
            opacity: 0.0;
            transform: rotate(360deg);
          }
        }
        #loadingText {
          position: absolute;
          display: block;
          color: #fff;
          text-align: center;
          font-size: 8px;
          letter-spacing: 1px;
          animation: textAnim 1.0s ease-in infinite;
        }
        @keyframes textAnim {
          from {
            opacity: 0.0;
            transform: scale(1.0);
          }
          50% {
            opacity: 1.0;
            transform: scale(1.1);
          }
          to {
            opacity: 0.0;
            transform: scale(1.0);
          }
        }
      }
    }

